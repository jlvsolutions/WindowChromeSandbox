<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CustomTitleBarWindowMVVM">

    <Color x:Key="Background.Medium">#F0F0F0</Color>
    <SolidColorBrush x:Key="Background.MediumBrush" Color="{StaticResource Background.Medium}" />

    <Color x:Key="Background.Light">#F0F0F0</Color>
    <SolidColorBrush x:Key="Background.LightBrush" Color="{StaticResource Background.Light}" />

    <Color x:Key="Background.VeryLight">#FCFCFC</Color>
    <SolidColorBrush x:Key="Background.VeryLightBrush" Color="{StaticResource Background.VeryLight}" />

    <Color x:Key="Foreground.Main">Black</Color>
    <SolidColorBrush x:Key="Foreground.MainBrush" Color="{StaticResource Foreground.Main}" />

    <Color x:Key="Foreground.Light">White</Color>
    <SolidColorBrush x:Key="Foreground.LightBrush" Color="{StaticResource Foreground.Light}" />

    <Color x:Key="Foreground.Sensitive">IndianRed</Color>
    <SolidColorBrush x:Key="Foreground.SensitiveBrush" Color="{StaticResource Foreground.Sensitive}" />

    <Color x:Key="Foreground.Watermark">Gray</Color>
    <SolidColorBrush x:Key="Foreground.WatermarkBrush" Color="{StaticResource Foreground.Watermark}" />

    <Color x:Key="Border.Primary">Gray</Color>
    <SolidColorBrush x:Key="Border.PrimaryBrush" Color="{StaticResource Border.Primary}" />

    <Color x:Key="Border.Sensitive">IndianRed</Color>
    <SolidColorBrush x:Key="Border.SensitiveBrush" Color="{StaticResource Foreground.Sensitive}" />

    <Color x:Key="Border.WindowTrim">SteelBlue</Color>
    <SolidColorBrush x:Key="Border.WindowTrimBrush" Color="{StaticResource Border.WindowTrim}" />

    <Color x:Key="Menu.Background">#EEF5FD</Color>
    <SolidColorBrush x:Key="Menu.BackgroundBrush" Color="{StaticResource Menu.Background}" />

    <!-- Title Bar Colors -->
    <Color x:Key="TitleBar.Background">AliceBlue</Color>
    <!--<Color x:Key="TitleBar.Background">#CCD5F0</Color>-->
    <SolidColorBrush x:Key="TitleBar.BackgroundBrush" Color="{StaticResource TitleBar.Background}" />

    <Color x:Key="TitleBar.Button.MouseOverBackground">Snow</Color>
    <SolidColorBrush x:Key="TitleBar.Button.MouseOverBackgroundBrush" Color="{StaticResource TitleBar.Button.MouseOverBackground}" />

    <Color x:Key="TitleBar.Button.PressedBackground">#FEFEFE</Color>
    <SolidColorBrush x:Key="TitleBar.Button.PressedBackgroundBrush" Color="{StaticResource TitleBar.Button.PressedBackground}" />

    <Color x:Key="TitleBar.CloseButton.MouseOverBackground">#E81123</Color>
    <SolidColorBrush x:Key="TitleBar.CloseButton.MouseOverBackgroundBrush" Color="{StaticResource TitleBar.CloseButton.MouseOverBackground}" />

    <Color x:Key="TitleBar.CloseButton.PressedBackground">#BC5361</Color>
    <SolidColorBrush x:Key="TitleBar.CloseButton.PressedBackgroundBrush" Color="{StaticResource TitleBar.CloseButton.PressedBackground}" />
</ResourceDictionary>