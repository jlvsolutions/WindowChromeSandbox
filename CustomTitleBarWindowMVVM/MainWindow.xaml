<Window x:Class="CustomTitleBarWindowMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomTitleBarWindowMVVM"
        mc:Ignorable="d"
        Icon="Images/Logo/FlagTurquoise.png"
        Title="MainWindow" Height="250" Width="500">
    
    <Grid Background="AliceBlue">
        <!--very edge text for testing when edges get cut off while maximized-->
        <TextBlock Text="AA Top AA" FontSize="22" Height="28" VerticalAlignment="Top"/>
        <TextBlock Text="VV Bottom VV" FontSize="22" Height="24" VerticalAlignment="Bottom"/>
        <TextBlock Text="VV Bottom Right VV" FontSize="22" Height="24" VerticalAlignment="Bottom" TextAlignment="Right"/>
    </Grid>
</Window>
